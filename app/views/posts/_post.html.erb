<h2><%= link_to post.title, post %></h2>
<p><%= raw post.body %></p>

<% if user_signed_in? %>
	<div class="actions">
		<%= link_to 'Show', post %>
		<%= link_to 'Edit', edit_post_path(post) %>
		<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>
<% end %>

<% if !user_signed_in? %>
    <%= "This text shows up on the page" %>
<% end %> 