<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <h2 class="center"><%= link_to post.title, post %></h2>
    <p><%= raw post.body %></p>

    <% if user_signed_in? %>
    	<%= link_to 'Edit', edit_post_path(post) %> |
    	<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
</div>
